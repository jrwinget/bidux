Package: bidux
Title: Behavior Insight Design: A Toolkit for Integrating Behavioral Science in UI/UX Design
Version: 0.1.0
Authors@R: 
    person(
        given = "Jeremy",
        family = "Winget", 
        role = c("aut", "cre"),
        email="contact@jrwinget.com",
        comment = c(ORCID = "0000-0002-3783-4354")
